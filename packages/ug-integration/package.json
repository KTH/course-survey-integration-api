{
  "name": "ug-integration",
  "description": "Abstraction layer for integration with UG",
  "private": true,
  "main": "dist/index.js",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc src/*.ts --outDir dist --sourceMap --declaration",
    "test": "echo: 'No unit tests yet, try `npm run test:integration`'",
    "test-credentials": "npm run test:integration",
    "test:integration": "jest --roots ./__tests__ --testMatch '**/*.integration.ts' --config=./jest.integration.config.js --testTimeout 5000"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "openid-client": "^5.6.4",
    "zod": "^3.5.0"
  }
}
